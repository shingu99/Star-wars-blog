<html lang="en">
    <%-
    include('./partials/head.ejs')
   %>
<body>
<!-- All things inside <% %> are ejs code that is javascript code inside html -->

<!-- partials is modular code so that same code snippet can go in everywhere -->
    <%-
     include('./partials/nav.ejs')
    %>

    

    <div class="blogs content">
        <h2>All blogs</h2>
       <!-- if the blogs that is there in app.js is not empty then it will display blogs using foreach -->
        <%
        if(blogs.length>0)
        {
        %>

        <%
        blogs.forEach(blog=>
        { %>
            <h3 class="title"><%= blog.title %></h3>
            <p><%= blog.snippet %></p>
        <%  
        });
        %>

        <%
        }
       
        else{
         %>
         <p>No Blogs to display</p>
         <%
        }
        %>

    </div>
    <%-
    include('./partials/footer.ejs')
   %>
</body>
</html>